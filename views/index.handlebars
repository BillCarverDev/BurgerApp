<div class="jumbotron" style = "text-align: center;">
  <div class="container">
    <h1>Burgers</h1>
  </div>
</div>

<div class="col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Burgers to eat</h3>
    </div>
    <div class="panel-body">
      {{#each burgers}}
        {{#unless this.devoured}}
        <div class = "well">
            
            <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <br />
              <span>{{this.id}}. {{this.burger_name}}<button type="submit" class="btn btn-primary" style = "margin-left: 20px;">Devour burger!</button></span>
            </form>
          <br />
        </div>  
        {{/unless}}
      {{/each}}
    </div>
  </div>
</div>

<div class="col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Add a Burger</h3>
    </div>
    <div class="panel-body">
      <form class="create-update-form" action="/api/burgers" method="POST">
        <div class="form-group">
          <label for="newBurger">Burger Name:</label>
          <input type="hidden" name="devoured" value="0">
          <input type="text" id="newBurger" name="burger_name">
          <br />
          <br />
          <button type="submit" class="btn btn-primary center-block">Add a Burger</button>
        </div>   
      </form>
    </div>
  </div> 
</div>

<div class="col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Devoured Burgers</h3>
    </div>
    <div class="panel-body">
      {{#each burgers}}
        {{#if this.devoured}}
           {{this.id}}. {{this.burger_name}}
            <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
            </form>
        {{/if}}
      {{/each}}
    </div>
  </div>    
</div>